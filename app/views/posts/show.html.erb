<h1><%= @post.title %></h1>
<h4>By <%= @post.user.full_name %>
<h4>Published on <%= @post.timestamp %>
<br><br>
<h2><%= @post.body %></h2>

<div id="comments_section">
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong><%= comment.user.full_name %></strong> <%= comment.timestamp %>
  </p>
  <p> <%= comment.body %> </p>
<% end %>
</div>

<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p>
    <%= form.text_area :body, placeholder: 'Add a comment...', maxlength: 30 %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

